<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="liu.chun.dong.dao.mapper.SegmentInfoMapper">
    <sql id="selectColumns">
        id as id,
        segment_id as segmentId,
        intersection_id as intersectionId,
        travel_direction as travelDirection,
        start_link as startLink,
        end_link as endLink,
        next_link as nextLink
	</sql>

    <select id="getSegmentInfo" resultType="liu.chun.dong.dao.entity.SegmentInfoEntity">
        select
        <include refid="selectColumns"/>
        from
        segment_infromation
    </select>

    <select id="getSegmentInfoByLink" parameterType="Map" resultType="liu.chun.dong.dao.entity.SegmentInfoEntity">
        select
        <include refid="selectColumns"/>
        from
        segment_infromation
        WHERE
        <if test="startLink!=null">
            AND start_link = #{startLink}
        </if>
        <if test="endLink!=null">
            AND end_link = #{endLink}
        </if>
    </select>
</mapper>